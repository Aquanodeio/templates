{
    "compilerOptions": {
      "target": "es2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["es2020", "dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }